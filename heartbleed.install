<?php

/**
 * @file
 * Install, update and uninstall functions for the Heartbleed module.
 */

/**
 * Implements hook_install().
 */
function heartbleed_install() {
  $t = get_t();
  drupal_install_schema('heartbleed');

  // When module is enabled, all users get logged out.
  // Expire all existing sessions.
  $query = "TRUNCATE table {sessions};";
  $result = db_query($query);

  // When module is enabled, all users get logged out.
  db_truncate('sessions')->execute();

  variable_set('heartbleed_password_reset_date', 1396828800);
  variable_set('heartbleed_message', $t('Please reset your password. More information: <a href="http://heartbleed.com/">heartbleed.com</a> and <a href="http://www.dhs.gov/stopthinkconnect-heartbleed">dhs.gov/stopthinkconnect-heartbleed</a>.'));
}

/**
 * Implements hook_uninstall().
 */
function heartbleed_uninstall() {
  drupal_uninstall_schema('heartbleed');
  variable_del('heartbleed_password_reset_date');
  variable_del('heartbleed_message');
}

/**
 * Implements hook_schema().
 */
function heartbleed_schema() {
  $schema['heartbleed'] = array(
    'description' => 'Heartbleed tracks when users update passwords here.',
    'fields' => array(
      'uid' => array(
        'description' => 'user id',
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
      ),
      'pass_last_updated' => array(
        'description' => 'last time we know of user updating password',
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
      ),
    ),
    'unique key' => array(
      'uid' => array('uid'),
    ),
  );

  return $schema;
}
